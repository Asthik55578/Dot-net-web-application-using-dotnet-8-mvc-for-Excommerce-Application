@model MVCCourse2.Models.User
@section title {
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

        nav ul {
            list-style: none;
            padding: 0;
        }

            nav ul li {
                display: inline;
                margin: 0 10px;
            }

                nav ul li a {
                    color: #fff;
                    text-decoration: none;
                }

        .hero {
            background: url('/images/hero.jpg') no-repeat center center/cover;
            color: #fff;
            padding: 100px 20px;
            text-align: center;
        }

        .hero-content {
            max-width: 600px;
            margin: 0 auto;
            background: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 8px;
        }

        .hero h2 {
            margin: 0;
            font-size: 2.5em;
        }

        .hero p {
            font-size: 1.2em;
        }

        .featured-products {
            text-align: center;
            padding: 50px 20px;
        }

        .product-grid {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .product-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            width: 200px;
        }

            .product-card img {
                max-width: 100%;
                border-radius: 8px;
            }

            .product-card h3 {
                margin: 10px 0;
                font-size: 1.1em;
            }

            .product-card p {
                color: #007BFF;
                font-size: 1.2em;
                margin: 5px 0;
            }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 15px 0;
        }

        .social-links {
            list-style: none;
            padding: 0;
            margin: 10px 0 0;
        }

            .social-links li {
                display: inline;
                margin: 0 10px;
            }

            .social-links a {
                color: #fff;
                text-decoration: none;
            }
    </style>
}
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-50">
    <div class="login-container" style="width:350px; padding: 20px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1); background-color: #fff;">
        <h2 class="text-center mb-4">Login</h2>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }
        <form asp-action="Index" asp-controller="login" method="post">
            <div class="form-group">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control form-control-sm" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-sm" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block w-100 mt-4">Login</button>
        </form>
    </div>
</div>
