@section title {
  @*   <center> <h1>Welcome to THRD!!!</h1></center> *@
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Clothing Shop | Home</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f9f9f9;
                color: #333;
            }

            header {
                background-color: #333;
                color: #fff;
                padding: 15px;
                text-align: center;
            }

            nav ul {
                list-style: none;
                padding: 0;
            }

                nav ul li {
                    display: inline;
                    margin: 0 10px;
                }

                    nav ul li a {
                        color: #fff;
                        text-decoration: none;
                    }

            .hero {
                background: url('/images/hero.jpg') no-repeat center center/cover;
                color: #fff;
                padding: 100px 20px;
                text-align: center;
            }

            .hero-content {
                max-width: 600px;
                margin: 0 auto;
                background: rgba(0, 0, 0, 0.5);
                padding: 20px;
                border-radius: 8px;
            }

            .hero h2 {
                margin: 0;
                font-size: 2.5em;
            }

            .hero p {
                font-size: 1.2em;
            }

            .featured-products {
                text-align: center;
                padding: 50px 20px;
            }

            .product-grid {
                display: flex;
                justify-content: center;
                gap: 20px;
                flex-wrap: wrap;
            }

            .product-card {
                background: #fff;
                border: 1px solid #ddd;
                border-radius: 8px;
                padding: 15px;
                text-align: center;
                width: 200px;
            }

                .product-card img {
                    max-width: 100%;
                    border-radius: 8px;
                }

                .product-card h3 {
                    margin: 10px 0;
                    font-size: 1.1em;
                }

                .product-card p {
                    color: #007BFF;
                    font-size: 1.2em;
                    margin: 5px 0;
                }

            footer {
                background-color: #333;
                color: #fff;
                text-align: center;
                padding: 15px 0;
            }

            .social-links {
                list-style: none;
                padding: 0;
                margin: 10px 0 0;
            }

                .social-links li {
                    display: inline;
                    margin: 0 10px;
                }

                .social-links a {
                    color: #fff;
                    text-decoration: none;
                }
        </style>
    </head>
    <body>
        <!-- Header Section -->
        <header>
            <div class="logo">
               @*  <h1>Clothing Shop</h1> *@
            </div>
            
        </header>

        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <h2>Welcome to Clothing Shop</h2>
                <p>Your one-stop destination for trendy and affordable clothing.</p>
                <a href="#" class="btn">Shop Now</a>
            </div>
        </section>

        <!-- Information Section -->
        <section class="info">
            <div class="info-content" style="padding: 20px; text-align: center;">
                <h2>About Our Shop</h2>
                <p>At Clothing Shop, we believe fashion should be accessible to everyone. Our collection ranges from casual wear to formal attire, ensuring there is something for every occasion. We pride ourselves on offering high-quality products at unbeatable prices. Discover the latest trends and enjoy a seamless shopping experience with us.</p>
            </div>
        </section>

        <!-- Featured Products Section -->
        <section class="featured-products">
            <h2>Featured Products</h2>
            <div class="product-grid">
                <!-- Sample Product Cards -->
                <div class="product-card">
                    <img src="/images/product1.jpg" alt="Product 1">
                    <h3>Product Name</h3>
                    <p>$19.99</p>
                    <a href="#" class="btn">View Details</a>
                </div>
                <div class="product-card">
                    <img src="/images/product2.jpg" alt="Product 2">
                    <h3>Product Name</h3>
                    <p>$29.99</p>
                    <a href="#" class="btn">View Details</a>
                </div>
                <div class="product-card">
                    <img src="/images/product3.jpg" alt="Product 3">
                    <h3>Product Name</h3>
                    <p>$39.99</p>
                    <a href="#" class="btn">View Details</a>
                </div>
            </div>
        </section>

        <!-- Footer Section -->
        <footer>
            <p>&copy; 2024 Clothing Shop. All rights reserved.</p>
            <ul class="social-links">
                <li><a href="#">Facebook</a></li>
                <li><a href="#">Instagram</a></li>
                <li><a href="#">Twitter</a></li>
            </ul>
        </footer>
    </body>
    </html>

}
